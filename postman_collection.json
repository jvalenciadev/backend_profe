{
    "info": {
        "name": "Ministerial System API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "url": {
                            "raw": "{{baseUrl}}/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\"username\": \"admin\", \"password\": \"secret\"}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        }
                    }
                }
            ]
        },
        {
            "name": "Territorial",
            "item": [
                {
                    "name": "List Departments",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/departments",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "departments"
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000"
        }
    ]
}